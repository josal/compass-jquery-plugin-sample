!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      = raw @browser_title || 'Compass jQTouch'

    = stylesheet_link_tag 'compiled/jqtouch/jqtouch.css', :media => 'screen, projection'
    = stylesheet_link_tag 'jqtouch/jqt.apple.css', :media => 'screen, projection'

    = javascript_include_tag :jquery_142
    = javascript_include_tag :jqtouch

    = javascript_include_tag 'locales'
    = javascript_include_tag 'common'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    
    = render(:partial => @jqt_partial_1, :format => :js) if @jqt_partial_1 
    = render(:partial => @jqt_partial_2, :format => :js) if @jqt_partial_2 

  %body{body_attributes}
    = yield
 