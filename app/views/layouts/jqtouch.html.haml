!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      = @browser_title || 'Compass jQTouch'

    = stylesheet_link_tag 'compiled/jqtouch/jqtouch.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/jqtouch/jqt.css', :media => 'screen, projection'

    = javascript_include_tag :defaults_13
    = javascript_include_tag :jqtouch

    = javascript_include_tag 'locales'
    = javascript_include_tag 'common'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    
    = render(:partial => @jtouch_partial_1, :format => :js) if @jqtouch_partial_1 
    = render(:partial => @jtouch_partial_2) if @jqtouch_partial_2

  %body
    = yield
 