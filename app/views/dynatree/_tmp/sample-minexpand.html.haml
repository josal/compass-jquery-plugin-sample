            / Add code to initialize the tree when the document is loaded:
            :javascript
              $(function(){
                $("#tree1").dynatree({
                  initAjax: {
                    url: "sample-data3.json"
                  },
                  onActivate: function(node) {
                    logMsg("Activated %o", node);
                  },
                  minExpandLevel: 1
                });
                $("#tree2").dynatree({
                  initAjax: {
                    url: "sample-data3.json"
                  },
                  onActivate: function(node) {
                    logMsg("Activated %o", node);
                  },
                  minExpandLevel: 2
                });
                $("#tree3").dynatree({
                  initAjax: {
                    url: "sample-data3.json"
                  },
                  onActivate: function(node) {
                    logMsg("Activated %o", node);
                  },
                  minExpandLevel: 3
                });
              });
