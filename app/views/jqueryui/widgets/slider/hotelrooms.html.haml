-@jquery_partial = 'hotelrooms.js.haml'

.demo
  %h3
    =@title
  %form#reservation
    %label{ :for => "minbeds" }
      Minimum number of beds
    %select#minbeds{ :name => "minbeds" }
      %option
        1
      %option
        2
      %option
        3
      %option
        4
      %option
        5
      %option
        6   
    %br
