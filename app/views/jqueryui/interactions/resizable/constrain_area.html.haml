-@title = "#{t('txt.ui.name')} #{t('txt.ui.interactions.resizable.default')} - #{t('txt.ui.interactions.resizable.constrain-area')}"
-@jquery_partial = 'constrain_area.js.haml'

.demo
  %h3
    =@title
  #container.ui-widget-content
    %h3.ui-widget-header
      Containment
    #resizable.ui-state-active
      %h3.ui-widget-header
        Resizable
/ End demo
.demo-description
  %p
    Define the boundaries of the resizable area. Use the
    %code
      containment
    option to specify a parent DOM element or a jQuery selector, like 'document.'
/ End demo-description
