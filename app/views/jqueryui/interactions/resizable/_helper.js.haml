%style{:type => "text/css", :media => "screen"}
  :plain
    #resizable { width: 150px; height: 150px; padding: 0.5em; }
    #resizable h3 { text-align: center; margin: 0; }
    .ui-resizable-helper { border: 2px dotted #00F; }
 
:javascript  
  $(function() {
    $("#resizable").resizable({
      helper: 'ui-resizable-helper'
    });
  });
  