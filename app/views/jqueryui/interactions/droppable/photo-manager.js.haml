<!doctype html>
%html{ :lang => "en" }
  %head
    %title
      jQuery UI Droppable - Simple photo manager
    %link{ :href => "../../themes/base/ui.all.css", :rel => "stylesheet", :type => "text/css" }
    %script{ :type => "text/javascript", :src => "../../js/jquery-1.3.2.js" }
    %script{ :type => "text/javascript", :src => "../../ui/ui.core.js" }
    %script{ :type => "text/javascript", :src => "../../ui/ui.draggable.js" }
    %script{ :type => "text/javascript", :src => "../../ui/ui.droppable.js" }
    %script{ :type => "text/javascript", :src => "../../ui/ui.resizable.js" }
    %script{ :type => "text/javascript", :src => "../../ui/ui.dialog.js" }
    %link{ :href => "../demos.css", :rel => "stylesheet", :type => "text/css" }
    %style{ :type => "text/css" }
      \#gallery { float: left; width: 65%; min-height: 12em; } * html #gallery { height: 12em; } /* IE6 */
      \.gallery.custom-state-active { background: #eee; }
      \.gallery li { float: left; width: 96px; padding: 0.4em; margin: 0 0.4em 0.4em 0; text-align: center; }
      \.gallery li h5 { margin: 0 0 0.4em; cursor: move; }
      \.gallery li a { float: right; }
      \.gallery li a.ui-icon-zoomin { float: left; }
      \.gallery li img { width: 100%; cursor: move; }
      
      \#trash { float: right; width: 32%; min-height: 18em; padding: 1%;} * html #trash { height: 18em; } /* IE6 */
      \#trash h4 { line-height: 16px; margin: 0 0 0.4em; }
      \#trash h4 .ui-icon { float: left; }
      \#trash .gallery h5 { display: none; }
    %script{ :type => "text/javascript" }
      $(function() {
      \// there's the gallery and the trash
      var $gallery = $('#gallery'), $trash = $('#trash');
      
      \// let the gallery items be draggable
      $('li',$gallery).draggable({
      cancel: 'a.ui-icon',// clicking an icon won't initiate dragging
      revert: 'invalid', // when not dropped, the item will revert back to its initial position
      containment: $('#demo-frame').length ? '#demo-frame' : 'document', // stick to demo-frame if present
      helper: 'clone',
      cursor: 'move'
      });
      
      \// let the trash be droppable, accepting the gallery items
      $trash.droppable({
      accept: '#gallery > li',
      activeClass: 'ui-state-highlight',
      drop: function(ev, ui) {
      deleteImage(ui.draggable);
      }
      });
      
      \// let the gallery be droppable as well, accepting items from the trash
      $gallery.droppable({
      accept: '#trash li',
      activeClass: 'custom-state-active',
      drop: function(ev, ui) {
      recycleImage(ui.draggable);
      }
      });
      
      \// image deletion function
      var recycle_icon = '
      %a.ui-icon.ui-icon-refresh{ :href => "link/to/recycle/script/when/we/have/js/off", :title => "Recycle this image" }
        Recycle image
      ';
      function deleteImage($item) {
      $item.fadeOut(function() {
      var $list = $('ul',$trash).length ? $('ul',$trash) : $('
      %ul.gallery.ui-helper-reset
      ').appendTo($trash);
      
      $item.find('a.ui-icon-trash').remove();
      $item.append(recycle_icon).appendTo($list).fadeIn(function() {
      $item.animate({ width: '48px' }).find('img').animate({ height: '36px' });
      });
      });
      }
      
      \// image recycle function
      var trash_icon = '
      %a.ui-icon.ui-icon-trash{ :href => "link/to/trash/script/when/we/have/js/off", :title => "Delete this image" }
        Delete image
      ';
      function recycleImage($item) {
      $item.fadeOut(function() {
      $item.find('a.ui-icon-refresh').remove();
      $item.css('width','96px').append(trash_icon).find('img').css('height','72px').end().appendTo($gallery).fadeIn();
      });
      }
      
      \// image preview function, demonstrating the ui.dialog used as a modal window
      function viewLargerImage($link) {
      var src = $link.attr('href');
      var title = $link.siblings('img').attr('alt');
      var $modal = $('img[src$="'+src+'"]');
      
      if ($modal.length) {
      $modal.dialog('open')
      } else {
      var img = $('
      %img{ :height => "288", :alt => "'+title+'", :width => "384", :style => "display:none;padding: 8px;" }
      ')
      \.attr('src',src).appendTo('body');
      setTimeout(function() {
      img.dialog({
      title: title,
      width: 400,
      modal: true
      });
      }, 1);
      }
      }
      
      \// resolve the icons behavior with event delegation
      $('ul.gallery > li').click(function(ev) {
      var $item = $(this);
      var $target = $(ev.target);
      
      if ($target.is('a.ui-icon-trash')) {
      deleteImage($item);
      } else if ($target.is('a.ui-icon-zoomin')) {
      viewLargerImage($target);
      } else if ($target.is('a.ui-icon-refresh')) {
      recycleImage($item);
      }
      
      return false;
      });
      });
  %body
    .demo.ui-widget.ui-helper-clearfix
      %ul#gallery.gallery.ui-helper-reset.ui-helper-clearfix
        %li.ui-widget-content.ui-corner-tr
          %h5.ui-widget-header
            High Tatras
          %img{ :src => "images/high_tatras_min.jpg", :height => "72", :alt => "The peaks of High Tatras", :width => "96" }
          %a.ui-icon.ui-icon-zoomin{ :href => "images/high_tatras.jpg", :title => "View larger image" }
            View larger
          %a.ui-icon.ui-icon-trash{ :href => "link/to/trash/script/when/we/have/js/off", :title => "Delete this image" }
            Delete image
        %li.ui-widget-content.ui-corner-tr
          %h5.ui-widget-header
            High Tatras 2
          %img{ :src => "images/high_tatras2_min.jpg", :height => "72", :alt => "The chalet at the Green mountain lake", :width => "96" }
          %a.ui-icon.ui-icon-zoomin{ :href => "images/high_tatras2.jpg", :title => "View larger image" }
            View larger
          %a.ui-icon.ui-icon-trash{ :href => "link/to/trash/script/when/we/have/js/off", :title => "Delete this image" }
            Delete image
        %li.ui-widget-content.ui-corner-tr
          %h5.ui-widget-header
            High Tatras 3
          %img{ :src => "images/high_tatras3_min.jpg", :height => "72", :alt => "Planning the ascent", :width => "96" }
          %a.ui-icon.ui-icon-zoomin{ :href => "images/high_tatras3.jpg", :title => "View larger image" }
            View larger
          %a.ui-icon.ui-icon-trash{ :href => "link/to/trash/script/when/we/have/js/off", :title => "Delete this image" }
            Delete image
        %li.ui-widget-content.ui-corner-tr
          %h5.ui-widget-header
            High Tatras 4
          %img{ :src => "images/high_tatras4_min.jpg", :height => "72", :alt => "On top of Kozi kopka", :width => "96" }
          %a.ui-icon.ui-icon-zoomin{ :href => "images/high_tatras4.jpg", :title => "View larger image" }
            View larger
          %a.ui-icon.ui-icon-trash{ :href => "link/to/trash/script/when/we/have/js/off", :title => "Delete this image" }
            Delete image
      #trash.ui-widget-content.ui-state-default
        %h4.ui-widget-header
          %span.ui-icon.ui-icon-trash
            Trash
          Trash
    /
      End demo
    .demo-description
      %p
        You can delete an image either by dragging it to the Trash or by clicking the trash icon.
      %p
        You can "recycle" an image by dragging it back to the gallery or by clicking the recycle icon.
      %p
        You can view larger image by clicking the zoom icon. jQuery UI dialog widget is used for the modal window.
    /
      End demo-description
