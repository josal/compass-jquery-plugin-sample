- content_for :content_head do
  = render(:partial => "default.js.haml", :format => :js)

.demo
  %h3
    =@title
  #examples
    %a{:name => "examples"}
    %h4
      %span Examples
    #ex2
      %p
        Pie charts
        %span.pie
          %canvas{:height => "14", :style => "display: inline-block; width: 14px; height: 14px; vertical-align: top;", :width => "14"}
        %span.pie
