- form_for(@event, :url => events_url) do |f|
  = f.error_messages
  %p
    = f.label :summary
    = f.text_field :summary
  %p
    = f.label :start_date
    = f.text_field :start_date
  %p
    = f.label :start_time
    = f.text_field :start_time
  %p
    = f.label :end_date
    = f.text_field :end_date
  %p
    = f.label :end_time
    = f.text_field :end_time
  = f.submit "Save"
  = link_to 'Cancel', events_path

  
  