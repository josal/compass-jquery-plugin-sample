%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
  %body
    %div{"data-role" => "page"}
      %div{"data-role" => "header"}
        %h1 .innerWidth()
      #innerWidth1{"data-role" => "content", "data-theme" => "c"}
        %h2.jq-clearfix.roundTop.section-title
          %span.name .innerWidth()
          %span.returns
            Returns:
            %a.return{:href => "http://docs.jquery.com/Types#Integer"} Integer
        .entry-details
          %p.desc
            %strong> Description:
            Get the current computed width for the first element in the set of matched elements, including padding but not border.
          %ul.signatures
            %li#innerWidth.signature
              %h4.name
                %span.versionAdded>
                  version added:
                  %a{:href => "/category/version/1.2.6/"} 1.2.6
                \.innerWidth()
          .longdesc
            %p This method returns the width of the element, including left and right padding, in pixels.
            %p
              This method is not applicable to
              %code window
              and
              %code document
              objects; for these, use
              %code
                %a{:href => "/width"} .width()
              instead.
            %p.image
              %img{:src => "http://api.jquery.com/images/0042_04_05.png"}/
          %h3 Example:
          #entry-examples.entry-examples
            #example-0
              %h4
                %span.desc Get the innerWidth of a paragraph.
              %pre
                %code.example.demo-code
                  :preserve
                    &lt;!DOCTYPE html&gt;
                    &lt;html&gt;
                    &lt;head&gt;
                      &lt;style&gt;p { margin:10px;padding:5px;border:2px solid #666; } &lt;/style&gt;
                      &lt;script src="http://code.jquery.com/jquery-latest.js"&gt;&lt;/script&gt;
                    &lt;/head&gt;
                    &lt;body&gt;
                    	&lt;p&gt;Hello&lt;/p&gt;&lt;p&gt;&lt;/p&gt;
                    &lt;script&gt;var p = $("p:first");
                    $("p:last").text( "innerWidth:" + p.innerWidth() );&lt;/script&gt;
                    &lt;/body&gt;
                    &lt;/html&gt;              %h4 Demo:
              .demo.code-demo
