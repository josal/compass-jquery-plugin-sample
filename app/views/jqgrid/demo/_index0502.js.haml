:javascript  
  function custom_edit(){
    var ids = jQuery("#invheaders_demo0502").jqGrid('getDataIDs');
    for(var i=0;i<ids.length;i++){
      var cl = ids[i];
      be = "<input style='height:22px;width:20px;' type='button' value='E' onclick=\"jQuery('#invheaders_demo0502').jqGrid('editRow','"+cl+"');\"  />"; 
      se = "<input style='height:22px;width:20px;' type='button' value='S' onclick=\"jQuery('#invheaders_demo0502').jqGrid('saveRow','"+cl+"');\"  />"; 
      ce = "<input style='height:22px;width:20px;' type='button' value='C' onclick=\"jQuery('#invheaders_demo0502').jqGrid('restoreRow','"+cl+"');\" />"; 
      jQuery("#invheaders_demo0502").jqGrid('setRowData',ids[i],{act:be+se+ce});
    }	
  };
  
= raw @grid
