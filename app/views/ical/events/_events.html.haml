%div#events
  %ol
    - for event in @events
      %li
        == #{event.summary} from #{event.starts_at.to_s(:at)} on #{event.starts_at.to_s(:mdy)} until #{event.ends_at.to_s(:at)} on #{event.ends_at.to_s(:mdy)}
      %button.event_update{ :value => event.id }
        Edit
      %button.event_delete{ :value => event.id }   
        Delete
        
        