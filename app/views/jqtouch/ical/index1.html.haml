      text-shadow: rgba(255, 255, 255, 0.3) 0px -1px 0;
      font-size: 13px;
      text-align: center;
      background: #999;
      }
      \#about p {
      margin-bottom: 8px;
      }
      \#about a {
      color: #fff;
      font-weight: bold;
      text-decoration: none;
      }
  %body
    #jqt
