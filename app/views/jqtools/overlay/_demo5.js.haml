:css
  a:active { outline:none; }
  :focus { -moz-outline-style:none; }
  .apple_overlay { display:none; background-image:url(/images/jqtools/overlay/white.png); width:640px; padding:35px; font-size:11px; }
  .apple_overlay .close { background-image:url(/images/jqtools/overlay/close.png); position:absolute; right:5px; top:5px; cursor:pointer; height:27px; width:27px; }
  #custom { background-image:url(/images/jqtools/overlay/box-512.png); width:512px; height:531px; padding:0px; }
  #custom div.close { right:-15px; top:-10px; }
  #petrol { background-image:url(/images/jqtools/overlay/petrol.png); color:#fff; }
  #apple { background-image:url(/images/jqtools/overlay/apple.png); color:#fff; padding:50px 70px; }

:javascript
  $(function() {
    $("button", ".demo").button();
  });
  $(document).ready(function() {
    $("button[rel]").overlay({mask: '#000', effect: 'apple'});
  });

