%script{:src => "../js/jquery-1.4.2.js"}
%script{:src => "../../src/dateinput/dateinput.js"}
%link{:href => "skin1.css", :rel => "stylesheet", :type => "text/css"}/
/ HTML5 date input
%input{:name => "mydate", :type => "date"}/
%input{"data-value" => "1967-05-30", :name => "mydate", :type => "date"}/
/ make it happen
:javascript
  var begdat = new Date(1980,1,1);
  var mindat = new Date(1940,1,1);
  var maxdat = new Date(1992,1,1);
  
  
  $(":date:first").dateinput({value: begdat, max: maxdat, min: mindat});
  
  $(":date:eq(1)").dateinput({
    format: 'dd/mm/yyyy',
    firstDay: 1,
    speed: 'fast',
    selectors: false,
    yearRange: [-75, -10]
  });
