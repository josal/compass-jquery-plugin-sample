-@title = t('txt.jqical.calendar.show')

- content_for :content_head do
  = render(:partial => "show.js.haml", :format => :js)

.demo
  %h3
    = @title
  %p{ :style => "color: #" + ("%x" % @current_object.color).rjust(6,'0') + ";" }
    = @current_object.name
  %p.buttons
    = link_to t('txt.jqical.calendar.edit'), edit_jqical_calendar_path
  %p.buttons
    = link_to t('txt.jqical.calendar.delete'), jqical_calendar_path, :confirm => t('txt.jqical.calendar.confirm'), :method => :delete
  %p.buttons
    = link_to t('txt.layout.back'), jqical_calendars_path
