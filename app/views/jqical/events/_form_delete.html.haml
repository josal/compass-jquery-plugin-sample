- form_for(@event, :url => jqical_calendar_events_url) do |f|
  = f.error_messages
  %p
    .span-4
      = f.label :summary
    .span-12
      %strong
        = @event.summary
  %br
  %p
    .span-4
      = f.label :location
    .span-12
      %strong
        = @event.location
  %br
  %p
    .span-4
      = f.label :start_date
    .span-4
      %strong
        = @event.start_date
    .span-4
      = f.label :start_time
    .span-4
      %strong
        = @event.start_time
  %br
  %p
    .span-4
      = f.label :end_date
    .span-4
      %strong
        = @event.end_date
    .span-4
      = f.label :end_time
    .span-4
      %strong
        = @event.end_time
  %br
  %p
    .span-4
      = f.label :description
    .span-12
      %strong
        = @event.description
  %br
  %p
    Do you really want to delete this event?
  = f.submit "Delete"
  