<%-- :mode=jsp: --%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ include file="../standalone.jsf" %>
:css
  body {
  	margin:200px;
  }	
  
  
  /* trigger button */
  #download_now {
  	background:transparent url(/img/home/download.png) no-repeat scroll 0 0;
  	display:block;
  	height:44px;
  	margin-bottom:30px;
  	overflow:hidden;
  	text-indent:-999em;
  	width:159px;
  	cursor:pointer;
  }
  
  /* mouseover state */
  #download_now:hover {
  	background-position:0 -44px ;		
  }
  
  /* clicked state */
  #download_now:focus {
  	background-position:0 -88px;
  }
  
  /* tooltip styling */
  .tooltip {
  	display:none;
  	background:url(${cdn}${jqt}/img/tooltip/black_arrow_big.png);
  	height:163px;
  	padding:40px 30px 10px 30px;
  	width:310px;
  	font-size:11px;
  	color:#fff;
  }
  
  /* a .label element inside tooltip */
  .tooltip .label {
  	color:yellow;
  	width:35px;
  }
  
  .tooltip a {
  	color:#ad4;
  	font-size:11px;
  	font-weight:bold;
  }
  
  
  ${css}
%body
  %c:set{:var => "html"}
    / trigger element. a regular workable link
    %a#download_now Download now
    / tooltip element
    .tooltip
      %img{:alt => "Flying screens", :src => "${cdn}/img/title/eye.png", :style => "float:left;margin:0 15px 20px 0"}/
      %table{:style => "margin:0"}
        %tr
          %td.label File
          %td flowplayer-${v.core}.zip
        %tr
          %td.label Date
          %td ${context.latestVersion.created}
        %tr
          %td.label Size
          %td 112 kB
        %tr
          %td.label OS
          %td all
      %a{:href => "/3.2/"} What's new in 3.2
  ${html}
  :javascript
    // What is $(document).ready ? See: http://flowplayer.org${jqt}/documentation/basics.html#document_ready
    $(document).ready(function() {
    
    $("#download_now").tooltip({ effect: 'slide'}); 
    
    ${js}
    });
