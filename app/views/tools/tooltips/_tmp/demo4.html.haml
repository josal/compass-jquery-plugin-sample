  %head
    %meta{:content => "text/html; charset=ISO-8859-1", "http-equiv" => "Content-Type"}
      %title jQuery Tools standalone demo
      / include the Tools
      %script{:src => "./demo4_files/jquery.tools.min.js"}
      / standalone page styling (can be removed)
      %link{:href => "./demo4_files/standalone.css", :rel => "stylesheet", :type => "text/css"}
        / tooltip styling
        %link{:href => "./demo4_files/tooltip-generic.css", :rel => "stylesheet", :type => "text/css"}
          :css
            #myform {
            	border:1px outset #ccc;
            	background:#fff url(http://static.flowplayer.org/img/global/gradient/h600.png) repeat-x;
            	padding:20px;
            	margin:20px 0;
            	width:350px;
            	font-size:12px;
            	-moz-border-radius:4px;
            }
            
            #myform h3 {
            	text-align:center;
            	margin:0 0 10px 0;
            }
            
            /* http://www.quirksmode.org/css/forms.html */
            #inputs label, #inputs input, #inputs textarea, #inputs select {
            	display: block;
            	width: 150px;
            	float: left;
            	margin-bottom: 20px;
            }
            
            #inputs label {
            	text-align: right;
            	width: 75px;
            	padding-right: 20px;
            }
            
            #inputs br {
            	clear: left;
            }
              %body
    %form#myform{:action => "http://flowplayer.org/tools/demos/tooltip/form.htm#"}
      %h3 Registration Form
      #inputs
        / username
        %label{:for => "username"} Username
        %input#username
          %br
            / password
            %label{:for => "password"} Password
            %input#password{:type => "password"}
              %br
                / email
                %label{:for => "email"} Email
                %input#email
                  %br
                    / message
                    %label{:for => "body"} Message
                    %textarea#body
                    %br
                      / message
                      %label{:for => "where"} Select one
                      %select#where
                        %option -- first option --
                        %option -- second option --
                        %option -- third option --
                      %br
      / email
      %label
        I accept the terms and conditions
        %input#check{:type => "checkbox"}
      %p
        %button{:type => "button"} Proceed
    / javascript coding
    :javascript
      // execute your scripts when the DOM is ready. this is a good habit
      $(function() {
      
      
      
      // select all desired input fields and attach tooltips to them
      $("#myform :input").tooltip({
      
      	// place tooltip on the right edge
      	position: "center right",
      
      	// a little tweaking of the position
      	offset: [-2, 10],
      
      	// use the built-in fadeIn/fadeOut effect
      	effect: "fade",
      
      	// custom opacity setting
      	opacity: 0.7
      
      });
      });
